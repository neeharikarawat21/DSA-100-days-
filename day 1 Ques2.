#include <stdio.h>
#include <stdlib.h>

#define SIZE 20011   // prime-ish size for hash table

typedef struct {
    int key;
    int value;
    int used;
} HashItem;

int hash(int key) {
    return (key % SIZE + SIZE) % SIZE;
}

int* twoSum(int* nums, int numsSize, int target, int* returnSize) {
    HashItem table[SIZE] = {0};

    for (int i = 0; i < numsSize; i++) {
        int need = target - nums[i];
        int h = hash(need);

        while (table[h].used) {
            if (table[h].key == need) {
                int* result = (int*)malloc(2 * sizeof(int));
                result[0] = table[h].value;
                result[1] = i;
                *returnSize = 2;
                return result;
            }
            h = (h + 1) % SIZE;
        }

        // insert current number
        h = hash(nums[i]);
        while (table[h].used) {
            h = (h + 1) % SIZE;
        }
        table[h].key = nums[i];
        table[h].value = i;
        table[h].used = 1;
    }

    *returnSize = 0;
    return NULL;
}
